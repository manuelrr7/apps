<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewUserValoracion"
        android:src="@drawable/ic_launcher"
        android:layout_weight="0.11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="yo"
        android:id="@+id/textViewNomUsuarioVal"
        android:textSize="15dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewUserValoracion"
        android:minWidth="200dp"
        android:maxWidth="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="este sitio me han dicho que no vale pa nÃ¡"
        android:id="@+id/textViewComentarioVal"
        android:layout_below="@+id/textViewNomUsuarioVal"
        android:layout_toEndOf="@+id/imageViewUserValoracion"
        android:textSize="14dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="21/09/16"
        android:id="@+id/txtFechaVal"
        android:layout_above="@+id/textViewComentarioVal"
        android:layout_alignParentEnd="true"
        android:textSize="13dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>